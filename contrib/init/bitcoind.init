#!/bin/bash
#
#  swyftd The swyft core server.
#
#
# chkconfig: 345 80 20
# description: swyftd
# processname: swyftd
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/swyftd, see below
if [ -f /etc/sysconfig/swyftd ]; then
        . /etc/sysconfig/swyftd
fi

RETVAL=0

prog=swyftd
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/swyftd
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/swyftd}

# swyftd defaults to /usr/bin/swyftd, override with BITCOIND_BIN
swyftd=${BITCOIND_BIN-/usr/bin/swyftd}

# swyftd opts default to -disablewallet, override with BITCOIND_OPTS
swyftd_opts=${BITCOIND_OPTS--disablewallet}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $swyftd $swyftd_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
